<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/white_rounded_background"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/movesense_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:src="@drawable/movesense_round"/>

    <TextView
        android:id="@+id/movesense_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/movesense_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        tools:text="@string/Movesense"/>


    <TextView
        android:id="@+id/movesense_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movesense_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/movesense_image"
        android:textColor="@android:color/black"
        tools:text="21:21:34:21"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/movesense_rsid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/movesense_address"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/movesense_image"
        android:textColor="@android:color/black"
        tools:text="40"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_forward_24"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"/>

</RelativeLayout>