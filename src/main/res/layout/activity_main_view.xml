<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D8CC6D8"
    android:orientation="vertical"
    android:padding="8dp">

    <!--Yl채palkki-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mainView_info_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/baseline_info_24"
            android:contentDescription="@string/info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/etusivu"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!--Main-view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:paddingTop="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--1-->
            <LinearLayout
                android:id="@+id/mainView_ll1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainView_card_height"
                android:orientation="horizontal"
                android:weightSum="2">

                <!--Yhdist채 anturi-nappi-->
                <RelativeLayout
                    android:id="@+id/mainView_movesense_Ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_rounded_background"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/mainView_movesense_text"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_bluetooth_connected_24" />

                    <TextView
                        android:id="@+id/mainView_movesense_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="@string/yhdist_anturi"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <!--Ohejeet-nappi-->
                <RelativeLayout
                    android:id="@+id/mainView_instructions"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_rounded_background"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/mainView_Instructions_text"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_question_mark_24"/>

                    <TextView
                        android:id="@+id/mainView_Instructions_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="@string/Ohjeet"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>

            <!--2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainView_card_height"
                android:orientation="horizontal"
                android:weightSum="2">

                <!--K채ynnist채 mittaus-nappi-->
                <RelativeLayout
                    android:id="@+id/mainView_dfu_Ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_rounded_background"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/mainView_dfu_text"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_info_24" />

                    <TextView
                        android:id="@+id/mainView_dfu_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="DFU"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <!--Mittaustulokset-nappi-->
                <RelativeLayout
                    android:id="@+id/mainView_savedData_Ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_rounded_background"
                    android:gravity="center"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/mainView_savedData_text"
                        android:scaleType="fitCenter"
                        android:src="@drawable/baseline_insert_chart_outlined_24" />

                    <TextView
                        android:id="@+id/mainView_savedData_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="@string/mittaustulokset"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--
    <TextView
        android:id="@+id/mainView_libraryVersion_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/library_version"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/mainView_appVersion_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/application_version"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/mainView_libraryVersion_tv"/>
        -->

</LinearLayout>
