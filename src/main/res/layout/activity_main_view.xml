<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D8CC6D8"
    android:orientation="vertical"
    android:padding="8dp">

    <!--Yläpalkki-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mainView_info_button"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:src="@drawable/baseline_info_24"
            android:contentDescription="@string/info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/etusivu"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!--Main-view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Ohjeet-nappi-->
            <LinearLayout
                android:id="@+id/mainView_instructions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="190dp"
                    android:src="@drawable/baseline_question_mark_24"
                    android:background="@drawable/white_rounded_background"
                    android:backgroundTint="#82C0CC"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical"
                    android:elevation="20dp"
                    android:background="@drawable/white_rounded_background"
                    android:layout_gravity="center"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Ohjeet"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kuinka yhdistää Movesense-anturi ja suorittaa mittaus?"
                        android:textColor="@android:color/black"/>

                </LinearLayout>
            </LinearLayout>

            <!--Yhdistä anturi ja käynnistä mittaus-nappi-->
            <LinearLayout
                android:id="@+id/mainView_movesense_Ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="190dp"
                    android:src="@drawable/baseline_bluetooth_connected_24"
                    android:background="@drawable/white_rounded_background"
                    android:backgroundTint="#16697A"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical"
                    android:elevation="20dp"
                    android:background="@drawable/white_rounded_background"
                    android:layout_gravity="center"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yhdistä anturi ja aloita mittaus"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yhdistä Movesense-anturi mobiililaitteeseesi ja mittaa yön yli."
                        android:textColor="@android:color/black"/>

                </LinearLayout>
            </LinearLayout>

            <!--Mittaustulokset-nappi-->
            <LinearLayout
                android:id="@+id/mainView_savedData_Ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="190dp"
                    android:src="@drawable/baseline_insert_chart_outlined_24"
                    android:background="@drawable/white_rounded_background"
                    android:backgroundTint="#FFA62B"
                    android:padding="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginBottom="0dp"
                    android:orientation="vertical"
                    android:elevation="20dp"
                    android:background="@drawable/white_rounded_background"
                    android:layout_gravity="center"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mittaustulokset"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tarkastele aiempia mittaustuloksiasi."
                        android:textColor="@android:color/black"/>

                </LinearLayout>
            </LinearLayout>




